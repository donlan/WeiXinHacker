<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_user_uin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_print"
            android:drawablePadding="12dp"
            android:gravity="center"
            android:textSize="18sp" />

        <ImageButton

            android:id="@+id/main_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_margin="12dp"
            android:background="@null"
            android:src="@drawable/ic_power" />
    </LinearLayout>


    <TextView
        android:id="@+id/main_last_export_time_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:drawableLeft="@drawable/ic_schedule"
        android:drawablePadding="12dp"
        android:gravity="center"
        android:text="最后一个微型消息时间："
        android:textSize="18sp" />

    <dong.lan.library.LabelTextView
        android:id="@+id/main_export_ltv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="开始导出微信消息"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:bg_color="#444"
        app:radius="4dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/main_status_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_marginTop="40dp"
            android:drawablePadding="12dp"
            android:drawableTop="@drawable/ic_dvr"
            android:gravity="start"
            android:text="消息通知"
            android:textSize="18sp" />
    </ScrollView>
</LinearLayout>